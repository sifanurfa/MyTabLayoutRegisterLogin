<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomepageActivity">

    <TextView
        android:id="@+id/homepage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Homepage"
        android:fontFamily="@font/splash_font"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome back, [Username]!"
        android:fontFamily="@font/sofia_font"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_margin="24dp"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/dashboard"/>

    <TextView
        android:id="@+id/status_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="How are you doing today?"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp">

        <!-- Sad Button -->
        <Button
            android:id="@+id/btn_sad"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text=":("
            android:textSize="18sp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp" />

        <!-- Happy Button -->
        <Button
            android:id="@+id/btn_happy"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text=":)"
            android:textSize="18sp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>